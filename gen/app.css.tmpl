:root {
	--font: 14px/1.2 Arial, sans-serif;
	--section-gap: 2px;
	--padding-header: 1px 8px;
	--padding-standard: 2px 4px;
	--standard-border: 1px solid var(--color-surface-edge);
}

:root[theme='light'] {
	color-scheme: light;
{{- range .Colors}}
	--color-{{.Name}}: {{.Light}};
{{- end}}
	--color-shadow: black;
}

:root[theme='dark'] {
	color-scheme: dark;
{{- range .Colors}}
	--color-{{.Name}}: {{.Dark}};
{{- end}}
	--color-shadow: black;
}

html,
body {
	margin: 0;
	padding: 0;
	font: var(--font);
	height: 100%;
	overflow: hidden;
}

button {
	font: var(--font);
	font-weight: bold;
	padding: 0.5em;
	color: var(--color-on-above-surface);
	background-color: var(--color-above-surface);
	border: 1px solid var(--color-surface-edge);
	border-radius: 8px;
}

button:active {
	color: var(--color-on-focus);
	background-color: var(--color-focus);
}

button:disabled {
	border-color: var(--color-surface-edge);
	color: var(--color-surface-edge);
	background-color: transparent;
}

input {
	font: var(--font);
	font-weight: bold;
	padding: 0.5em;
	color: var(--color-on-surface);
	background-color: var(--color-surface);
	border: 1px solid var(--color-surface-edge);
	border-radius: 8px;
}

.banding {
	background-color: var(--color-banding);
	color: var(--color-on-banding);
}
